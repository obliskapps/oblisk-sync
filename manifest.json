{
  "manifest_version": 3,
  "name": "Oblisk Sync",
  "version": "0.1.0",
  "description": "Save and restore your browsing sessions, save all your open tabs into a session and restore them later on any device.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "dist/background/background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "dist/content/content.bundle.js"
      ]
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/nip07/nip07.bundle.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "action": {
    "default_popup": "dist/popup/popup.html"
  }
}